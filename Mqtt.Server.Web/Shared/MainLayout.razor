@using System.Reflection
@inherits LayoutComponentBase

<PageTitle>@description</PageTitle>

<div class="page">
    <div class="sidebar bg-gradient">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-3">
            <LoginView />
        </div>

        <article class="content px-3">
            @Body
        </article>
    </main>
</div>

@code {
    private string description = Assembly.GetEntryAssembly().GetDescription();
}