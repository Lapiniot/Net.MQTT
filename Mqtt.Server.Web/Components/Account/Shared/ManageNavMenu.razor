@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager

<ul class="tw:nav tw:nav-pills tw:flex-col">
    <li class="tw:nav-item">
        <NavLink class="tw:nav-link" href="Account/Manage" Match="NavLinkMatch.All">Profile</NavLink>
    </li>
    <li class="tw:nav-item">
        <NavLink class="tw:nav-link" href="Account/Manage/Email">Email</NavLink>
    </li>
    <li class="tw:nav-item">
        <NavLink class="tw:nav-link" href="Account/Manage/ChangePassword">Password</NavLink>
    </li>
    @if (hasExternalLogins)
    {
        <li class="tw:nav-item">
            <NavLink class="tw:nav-link" href="Account/Manage/ExternalLogins">External logins</NavLink>
        </li>
    }
    <li class="tw:nav-item">
        <NavLink class="tw:nav-link" href="Account/Manage/TwoFactorAuthentication">Two-factor authentication</NavLink>
    </li>
    <li class="tw:nav-item">
        <NavLink class="tw:nav-link" href="Account/Manage/PersonalData">Personal data</NavLink>
    </li>
</ul>

@code {
    private bool hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }
}