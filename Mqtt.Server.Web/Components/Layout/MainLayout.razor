@using System.Reflection
@using Mqtt.Server.Web.Components.Identity
@using OOs.Reflection
@inherits LayoutComponentBase

<PageTitle>@description</PageTitle>

<div class="page">
    <div class="sidebar bg-gradient">
        <NavMenu />
    </div>
    <main>
        <div class="top-row">
            <LoginView />
        </div>
        <article class="content px-3">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private string description = Assembly.GetEntryAssembly().GetDescription();
}