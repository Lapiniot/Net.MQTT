<Project Sdk="Microsoft.NET.Sdk">

    <Import Project="../common.targets" />

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <AssemblyName>mqtt-benchmark</AssemblyName>
        <Description>MQTT Benchmark Tool</Description>
        <Version>1.0.2</Version>
        <UseAppHost>true</UseAppHost>
        <RuntimeIdentifiers>win10-x64;osx-x64;debian-arm64;linux-arm64</RuntimeIdentifiers>
        <IsPackable>true</IsPackable>
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>mqtt-benchmark</ToolCommandName>
        <PackageOutputPath>./nupkg</PackageOutputPath>
        <PackageId>Oos.Mqtt.Benchmark</PackageId>
        <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="7.0.0-preview.3.22175.4" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="../System.Net.Mqtt.Client/System.Net.Mqtt.Client.csproj" />
        <ProjectReference Include="../System.Common/System.Common.Configuration/System.Common.Configuration.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Content Include="appsettings.json">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
        </Content>
        <None Include="*.pfx;*.key;*.crt">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <CopyToPublishDirectory>Never</CopyToPublishDirectory>
        </None>
    </ItemGroup>

</Project>