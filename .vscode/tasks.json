{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "FRAMEWORK": "net6.0"
        }
    },
    "presentation": {
        "panel": "shared",
        "showReuseMessage": false,
        "focus": true,
        "group": "deploy",
        "reveal": "always"
    },
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish MQTT Server",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Mqtt.Server/Mqtt.Server.csproj",
                "--configuration=Release",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish MQTT Server (self-contained)",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Mqtt.Server/Mqtt.Server.csproj",
                "--configuration=Release",
                "--runtime=${input:rid}",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/property:PublishTrimmed=true"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Deploy MQTT Server (remote SSH)",
            "detail": "Starts deployment to remote server via rsync over SSH",
            "dependsOn": [
                "Publish MQTT Server (self-contained)"
            ],
            "type": "shell",
            "problemMatcher": [],
            "command": "rsync",
            "args": [
                "--rsync-path",
                "sudo -u mqtt-daemon rsync",
                "--recursive",
                "--verbose",
                "--progress",
                "--delete",
                "--filter=\"protect **/config\"",
                "--filter=\"protect **/data\"",
                "--filter=\"protect **/appsettings.Production*.json\"",
                "--filter=\"protect **/*.service\"",
                "--rsh=ssh",
                "\"${workspaceFolder}/Mqtt.Server/bin/Release/$FRAMEWORK/${input:rid}/publish/\"",
                "${input:remote-url}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "remote-url",
            "description": "Remote folder for deployment (rsync destination)",
            "type": "promptString"
        },
        {
            "id": "rid",
            "description": "Runtime Identifier",
            "type": "pickString",
            "options": [
                "win10-x64",
                "osx-x64",
                "ubuntu-x64",
                "ubuntu-arm",
                "ubuntu-arm64",
                "debian-x64",
                "debian-arm",
                "debian-arm64",
                "alpine-x64",
                "alpine-arm64"
            ],
            "default": "osx-x64"
        }
    ]
}