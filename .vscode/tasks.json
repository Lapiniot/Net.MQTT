{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "_CONFIGURATION_": "Debug",
            "FRAMEWORK": "net5.0"
        }
    },
    "presentation": {
        "panel": "shared",
        "showReuseMessage": false,
        "focus": true,
        "group": "deploy",
        "reveal": "always"
    },
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish MQTT server",
            "command": "dotnet publish -c ${_CONFIGURATION_} -r ${input:rid} --no-self-contained",
            "type": "shell",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/Mqtt.Server"
            },
            "problemMatcher": []
        },
        {
            "label": "deploy MQTT server (remote SSH)",
            "type": "shell",
            "dependsOn": "publish MQTT server",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/Mqtt.Server"
            },
            "command": "rsync",
            "args": [
                "--rsync-path",
                "sudo -u mqtt-daemon rsync",
                "--recursive",
                "--verbose",
                "--progress",
                "--delete",
                "--rsh=ssh",
                "bin/${_CONFIGURATION_}/${FRAMEWORK}/${input:rid}/publish/",
                "${input:remote-url}"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "remote-url",
            "description": "Remote folder for deployment (rsync destination)",
            "type": "promptString",
            "default": "root@nanopct4:/usr/lib/mqttd"
        },
        {
            "id": "rid",
            "description": "Runtime Identifier",
            "type": "pickString",
            "options": [
                "debian-arm64",
                "win10-x64",
                "osx-x64",
                "linux-arm64"
            ],
            "default": "debian-arm64"
        }
    ]
}