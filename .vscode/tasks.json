{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env": {
            "platform": "${input:rid}"
        }
    },
    "tasks": [
        {
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet publish -c Release",
            "type": "shell",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "publish MQTT server",
            "command": "dotnet publish -c Release -r ${platform} --no-self-contained",
            "type": "shell",
            "group": "none",
            "options": {
                "cwd": "${workspaceFolder}/Mqtt.Server"
            },
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false,
                "group": "deploy"
            },
            "problemMatcher": []
        },
        {
            "label": "deploy MQTT server (remote SSH)",
            "type": "shell",
            "dependsOn": "publish MQTT server",
            "group": "none",
            "options": {
                "cwd": "${workspaceFolder}/Mqtt.Server"
            },
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false,
                "focus": true,
                "group": "deploy"
            },
            "problemMatcher": [],
            "osx": {
                "command": "rsync --rsync-path 'sudo -u mqtt-daemon rsync' -r -v --progress --delete -e ssh bin/Release/netcoreapp3.0/${platform}/publish/ ${input:remote-url}"
            },
            "runOptions": {
                "reevaluateOnRerun": false
            }
        }
    ],
    "inputs": [
        {
            "id": "remote-url",
            "description": "Remote folder for deployment (rsync destination)",
            "type": "promptString",
            "default": "root@nanopct4:/usr/bin/mqttd"
        },
        {
            "id": "rid",
            "description": "Runtime Identifier",
            "type": "pickString",
            "options": [
                "debian-arm64",
                "win10-x64",
                "osx-x64",
                "linux-arm64"
            ],
            "default": "debian-arm64"
        }
    ]
}