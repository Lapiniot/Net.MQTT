{
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2AndHttp3"
    },
    "Endpoints": {
      "http": {
        "Url": "http://*:8001",
        "Protocols": "Http1"
      },
      "mqtt-kestrel": {
        "Url": "http://*:1884",
        "Protocols": "Http1"
      },
      "mqtt-uds-kestrel": {
        "Url": "http://unix:/tmp/kestrel-mqtt.sock",
        "Protocols": "Http1"
      }
    }
  },
  "MQTT": {
    "Endpoints": {
      "mqtt": {
        "Address": "::",
        "Port": 1883
      },
      "unix-socket": {
        "Url": "unix:///tmp/mqttd.sock"
      }
    },
    "ProtocolLevel": "All",
    "ConnectTimeoutMilliseconds": 1500,
    "MaxUnflushedBytes": 4096,
    "MaxInFlight": 32768,
    "MaxReceive": 32768,
    "MaxPacketSize": 4194304,
    "MQTT5": {
      "TopicAliasSizeThreshold": 64
    }
  },
  "KestrelMQTT": {
    "QueueCapacity": 100,
    "UseEndpoints": {
      "http": false,
      "mqtt-kestrel": true,
      "mqtt-uds-kestrel": true
    },
    "WebSockets": {
      "KeepAliveInterval": "00:02:00",
      "/mqtt": {
        "SubProtocols": [
          "mqtt",
          "mqttv3.1"
        ]
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "None"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": false,
        "TimestampFormat": "HH:mm:ss ",
        "UseUtcTimestamp": true
      }
    }
  },
  "ConnectionStrings": {
    "SqliteAppDbContextConnection": "Data Source=./data/Mqtt.Server.db"
  },
  "AdminWebUI": {
    "AutoRefreshInterval": "00:00:03",
    "EventsThrottleInterval": "00:00:03"
  },
  "MetricsCollector": {
    "RecordInterval": "00:00:15",
    "MqttServer": {
      "RecordInterval": "00:00:10"
    }
  },
  "Metrics": {
    "EnabledMetrics": {
      "Net.Mqtt.Server": {
        "Default": false,
        "mqtt.server.bytes_rx": false,
        "mqtt.server.bytes_tx": false,
        "mqtt.server.packets_rx": false,
        "mqtt.server.packets_tx": false
      }
    }
  }
}